<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#37383B"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#37383B">

            <ImageView
                android:id="@+id/card_category_switch_1"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/dish_category_first"
                android:contentDescription="@string/app_name"
                android:onClick="onCategorySwitch"
                android:tag="1"
                tools:ignore="TouchTargetSizeCheck" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/sett_line"/>
            <ImageView
                android:id="@+id/card_category_switch_2"
                android:tag="2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@drawable/dish_category_second"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/sett_line"/>
            <ImageView
                android:id="@+id/card_category_switch_3"
                android:tag="3"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp"
                android:background="@drawable/dish_category_salad"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/sett_line"/>
            <ImageView
                android:id="@+id/card_category_switch_4"
                android:tag="4"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="30dp"
                android:background="@drawable/dish_category_snacs"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>