<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:background="@color/main_dark"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="5dp"
android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lastsView"
        android:layout_width="245dp"
        android:layout_height="135dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/lastsDishView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/view_dish_global"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.049" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="108dp"
            android:layout_marginStart="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/recipe" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/lastsDishName"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:fontFamily="@font/inter_semibold"
        android:gravity="bottom|start"
        android:text="Московская солянка"
        android:textColor="#CECACA"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/lastsView"
        app:layout_constraintTop_toBottomOf="@+id/lastsView" />

</androidx.constraintlayout.widget.ConstraintLayout>